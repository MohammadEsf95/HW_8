<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration>
    <session-factory>
        <property name="show_sql">true</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.connection.url">
            jdbc:mysql://localhost/homeworkeight?createDatabaseIfNotExist=true
        </property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="ir.maktab.java32.hibernate.projects.homework8.entities.User"/>
        <mapping class="ir.maktab.java32.hibernate.projects.homework8.entities.Category"/>
        <mapping class="ir.maktab.java32.hibernate.projects.homework8.entities.Article"/>
        <mapping class="ir.maktab.java32.hibernate.projects.homework8.entities.Role"/>
        <mapping class="ir.maktab.java32.hibernate.projects.homework8.entities.Tag"/>
        <mapping class="ir.maktab.java32.hibernate.projects.homework8.entities.Address"/>
    </session-factory>
</hibernate-configuration>